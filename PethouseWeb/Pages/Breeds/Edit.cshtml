@page
@model PethouseWeb.Pages.Breeds.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Breed</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Breed.BreedId" />
            <div class="form-group">
                <label asp-for="Breed.Breedname" class="control-label"></label>
                <input asp-for="Breed.Breedname" class="form-control" />
                <span asp-validation-for="Breed.Breedname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Breed.RaceId" class="control-label"></label>
                <select asp-for="Breed.RaceId" class="form-control" asp-items="ViewBag.RaceId"></select>
                <span asp-validation-for="Breed.RaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
