@page
@model PethouseWeb.Pages.Medications.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Medication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Medication.MedId" />
            <div class="form-group">
                <label asp-for="Medication.Medname" class="control-label"></label>
                <input asp-for="Medication.Medname" class="form-control" />
                <span asp-validation-for="Medication.Medname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medication.MedDate" class="control-label"></label>
                <input asp-for="Medication.MedDate" class="form-control" />
                <span asp-validation-for="Medication.MedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medication.MedExpDate" class="control-label"></label>
                <input asp-for="Medication.MedExpDate" class="form-control" />
                <span asp-validation-for="Medication.MedExpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medication.PetId" class="control-label"></label>
                <select asp-for="Medication.PetId" class="form-control" asp-items="ViewBag.PetId"></select>
                <span asp-validation-for="Medication.PetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
